<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".FirstScreen">

    <EditText
        android:id="@+id/customer_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="no"
        android:ems="10"
        android:hint="@string/customer_name"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnDatePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/date_picker" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/listOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/car_type" />

        <ListView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="100dp">

        </ListView>

    </LinearLayout>

    <EditText
        android:id="@+id/duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="no"
        android:ems="10"
        android:hint="@string/duration"
        android:inputType="number" />

    <RadioGroup
        android:id="@+id/lro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/location_receip_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/location_receipt_options" />

        <RadioButton
            android:id="@+id/portofpatra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/portofpatra" />

        <RadioButton
            android:id="@+id/ktelstation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ktelstation" />

        <RadioButton
            android:id="@+id/companyoffice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/companyoffice" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/ro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/rent_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rent_options" />

        <RadioButton
            android:id="@+id/extra_insurance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/extra_insurance" />

        <RadioButton
            android:id="@+id/gps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/gps" />

        <RadioButton
            android:id="@+id/roadside_assistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/roadside_assistance" />

    </RadioGroup>

    <Button
        android:id="@+id/save_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/save_button"
        android:onClick="saveButton" />

</LinearLayout>